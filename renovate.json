{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":maintainLockFilesWeekly",
    ":skipStatusChecks",
    ":disableDependencyDashboard"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": "before 3am",
  "labels": ["renovate"],
  "assignees": ["yanoshi-1009"],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["@cybozu/eslint-config"],
      "automerge": true
    },
    {
      "matchPackageNames": ["core-js"],
      "extends": [":automergePatch"]
    }
  ]
}
